# API Keys Configuration
# Copy this file to .env and fill in your actual API keys

# OpenAI API Key (required)
# Get it from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# YouTube Data API v3 Key (required)
# Get it from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# Pinecone Vector Database (required)
# Get it from: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=youtube-research
PINECONE_ENVIRONMENT=us-east-1

# LangSmith (optional - for tracing and monitoring)
# Get it from: https://smith.langchain.com/
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=youtube-ai-assistant
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# OPTIONAL: Voice settings
DEFAULT_VOICE=nova
AUTO_PLAY_VOICE=false
MAX_VOICE_INPUT_SECONDS=30

# OPTIONAL: Processing settings
WHISPER_MODEL=base
MAX_UPLOAD_SIZE_MB=200
SESSION_EXPIRY_HOURS=24